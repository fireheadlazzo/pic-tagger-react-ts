{
  "extends": [
    "tslint:recommended", 
    "tslint-react", 
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "coverage/lcov-report/*.js",
      "db",
      "node_modules/**/*.ts",
      "server"
    ]
  },
  "rules": {
    "jsx-no-lambda": false,
    "no-console": false,
    "semicolon": [true, "always"]
  }
}

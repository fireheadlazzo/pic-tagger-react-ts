    "services" : "build/services"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.7.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "nconf": "^0.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/nconf": "^0.10.0",
    "@types/node": "^14.14.14",
    "copy": "^0.3.2",
    "nodemon": "^2.0.6",

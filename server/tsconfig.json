{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    /* Options */
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    /* Path rewrites */
    // "paths": {
    //   "index": [
    // "src/index"
    //   ]
    // }
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "config": [
        "config"
      ],
      "controllers/*": [
        "controllers/*"
      ],
      "middlewares/*": [
        "middlewares/*"
      ],
      "models/*": [
        "models/*"
      ],
      "router/*": [
        "router/*"
      ],
      "services/*": [
        "services/*"
      ],
      "*": [
        "node_modules/*",
        "types/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}
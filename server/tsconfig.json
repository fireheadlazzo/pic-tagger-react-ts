{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "rootDir": "./src",
      "outDir": "./build",
      "strict": true,

      /* Options */
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters":false,
      "noImplicitReturns": true,
      /* Path rewrites */
      // "paths": {
      //   "index": [
          // "src/index"
      //   ]
      // }
    },
    "include": [
        "src/**/*"
    ]
}
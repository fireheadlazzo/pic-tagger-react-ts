{
    "steps": [
        {
            "name": "node:13",
            "entrypoint": "npm",
            "args": ["install"],
            "dir": "server"
        },
        {
            "name": "node:13",
            "entrypoint": "npm",
            "args": ["run", "build"],
            "dir": "server"
        },
        {
            "name": "gcr.io/cloud-builders/docker",
            "args": ["build", "-t", "gcr.io/$PROJECT_ID/server:latest", "."],
            "dir": "server"
        }
    ],
    "timeout": "1000s",
    "options": {},
    "images": ["gcr.io/$PROJECT_ID/server:latest"]
}